@using model
@model model.Pedido

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
    </dl>
</div>

<h4>Itens:</h4>
<table class="table">
    
    @foreach (ItemPedido item in ViewBag.Itens)
    {
        <tr>
            <TD>
                @item.Produto.Nome
            </TD>
            <TD>
                @item.Quantidade
            </TD>
            <TD>
                @(item.Quantidade*item.Produto.Preco)
            </TD>
            <td>
                @Html.ActionLink("Edit", "../ItemPedido/Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "../ItemPedido/Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "../ItemPedido/Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
